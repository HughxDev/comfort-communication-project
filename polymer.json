{
  "entrypoint": "index.html",
  "shell": "src/comfort-app.html",
  "fragments": [
    "src/section-1/comfort-pretest.html",
    "src/comfort-view404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower_components/**/*",
    "node_modules/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": true
    }
  ]
}
